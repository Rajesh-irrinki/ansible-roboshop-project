[Unit]
Description=User Service
After=network.target

[Service]
User=roboshop
Environment=MONGO=true
Environment=REDIS_URL=redis://redis-dev.rajeshirrinki.online:6379
Environment=MONGO_URL=mongodb://mongodb-dev.rajeshirrinki.online:27017/users
ExecStart=/bin/node /app/server.js
SyslogIdentifier=user
Restart=always

[Install]
WantedBy=multi-user.target